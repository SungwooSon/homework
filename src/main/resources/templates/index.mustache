{{>layout/header}}

<h1>주제:공지사항 웹 어플리케이션 구현</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/notices/save" role="button" class="btn btn-primary">공지사항 등록</a>
        </div>
    </div>
    <br>

    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>작성일</th>
            <th>최종 수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#notices}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/notices/update/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{createdDate}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/notices}}
        </tbody>
    </table>
    <ul class="pagination justify-content-center">
        <li class="page-item"><a class="page-link" href="?page={{previous}}">Previous</a></li>
        {{#check}}
            <li class="page-item"><a class="page-link" href="?page={{next}}">Next</a></li>
        {{/check}}
        {{^check}}
            <li class="page-item disabled"><a class="page-link" href="?page={{next}}">Next</a></li>
        {{/check}}
    </ul>

</div>

{{>layout/footer}}